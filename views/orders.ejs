<div class="container">
    <div class="row p-4">
        <h2>Orders</h2>
    </div>
    <div class="row p-4">
            <div class="col">
                <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                  <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Precio total</th>
                                    <th scope="col">Fecha</th>
                                    <th scope="col"> Actions </th>
                                  </tr>
                                </thead>
                                <tbody>
                                 
                                  <% orders.forEach(function(order){ %>
                                    <tr>
                                        <td><%= order.order_id %></td>
                                        <td><%= order.precio_total %></td>
                                        <td><%= order.fecha %></td>
                                        <td>
                                            <a href="/orders/<%= order.order_id %>" class="btn btn-primary"> Detalles </a>
                                        </td>
                                    </tr>
                                  <% }); %>
                                </tbody>
                              </table>
                          </div>
            </div>
    </div>
</div>
