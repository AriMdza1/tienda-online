
<div class="container p-4">
    <div class="row">
        <form class="card p-4" action="/pagar" method="post">
            <div class="form-group my-2">
               <select class="form-control my-2" name="divisa" id="divisa">
                    <option value="USD">Dollares</option>
                    <option value="USD">Bolivares</option>
                </select>
            </div>

                <select class="form-control my-2" name="metodoPago" id="metodo-pago">
                <% metodos_de_pago.forEach(function(mdp){ %>              
                    <option value="<%= mdp.metodos_pago_id %>"><%= mdp.name %></option>
                 <% }); %>
                </select>

            <div class="form-group my-2">
                <label for="exampleFormControlInput1">Referencia de pago</label>
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Ejemplo: 2345">
             </div>
            <div class="form-group" >
                <button class="btn btn-primary" >Registrar pago</button>
            </div>
        </form
    </div>
</div>
