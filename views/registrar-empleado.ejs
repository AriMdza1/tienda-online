<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/admin-dashboard.css">
    <script src="js/bootstrap.min.js" type="text/javascript"></script>
    <script src="js/jquery-3.6.1.min.js"></script>
    <title>Admin Dashboard</title>
</head>
<body>
    <div id="wrapper">
        <div class="overlay"></div>
         
             <!-- Sidebar -->
         <nav class="navbar navbar-inverse fixed-top" id="sidebar-wrapper" role="navigation">
          <ul class="nav sidebar-nav">
            <div class="sidebar-header">
            <div class="sidebar-brand">
              <a href="#">Brand</a></div></div>
            <li><a href="/adminDashboard">Home</a></li>
            <li><a href="/registrarEmpleado">Registrar Empleados</a></li>
            <li><a href="/logout">Cerrar Sesion</a></li>
       </nav>
             <!-- /#sidebar-wrapper -->
     
             <!-- Page Content -->
             <div id="page-content-wrapper">
                 <button type="button" class="hamburger animated fadeInLeft is-closed" data-toggle="offcanvas">
                     <span class="hamb-top"></span>
                     <span class="hamb-middle"></span>
                     <span class="hamb-bottom"></span>
                 </button>
                 <div class="container">
                     <div class="row">
                        <div class="col-8 m-auto">
                          <div class="row">
                            <div class="wrapper fadeInDown">
                                <div class="wrapper fadeInDown">
                                    <div id="formContent">
                                        <form action="/registrarEmpleado" method="post">
                                            <div>
                                                <h3>registrar Empleado</h3>
                                                <input type="text" id="login" class="fadeIn second" name="p_nombre" placeholder="Primer nombre">
                                                <input type="text" id="login" class="fadeIn second" name="s_nombre" placeholder="Segundo nombre">
                                                <input type="text" id="login" class="fadeIn second" name="p_apellido" placeholder="Primer apellido">                                                                        
                                                <input type="text" id="login" class="fadeIn second" name="s_apellido" placeholder="Segundo apellido">  
                                                <div class="form-group">
                                                    <select name="rol" id="rol" class="form-control">
                                                        <% roles.forEach(function(rol){ %>
                                                            <option value="<%= rol.rol_id %>">
                                                                <%= rol.name %>
                                                            </option>
                                                        <% }); %>
                                                    </select>
                                                </div>                                                                                                                                                                      
                                                <input type="text" id="login" class="fadeIn second" name="email" placeholder="Correo Electronico">
                                                <input type="text" id="login" class="fadeIn second" name="cedula" placeholder="cedula">                                                                                                                                                                        
                                                <input type="text" id="login" class="fadeIn second" name="telf" placeholder="telefono">                                                                                                                                                                        
                                                <input type="text" id="login" class="fadeIn second" name="direccion_1" placeholder="direccion 1">
                                                <input type="text" id="login" class="fadeIn second" name="direccion_2" placeholder="direccion 2 (opcional)">  
                                                <input type="text" id="login" class="fadeIn second" name="casa" placeholder="casa">                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                          
                                                <input type="password" id="password" class="fadeIn third" name="password" placeholder="Contraseña">
                                                <input type="password" id="password" class="fadeIn third" name="repeatedPassword" placeholder="Confirmar Contraseña">
                                                <input type="submit" class="fadeIn fourth" value="Registrarse">
                                            </div>
                                              <div >
                                                <% if (errors) { %>
                                                    <% errors.forEach(function(error){ %>
                                                        <div class="alert alert-danger">error: <%= error %> </div>  
                                                    <% }); %>
                                                <% } %>
                                            <a href="/adminDashboard" class="underlineHover" type="submit" name="register" value="register">Volver al Dashboard</a>
                                        </form>
                                    </div>
                                </div>
                            </div>
                          </div>
                        </div>
                     </div>
                 </div>
             </div>
             <!-- /#page-content-wrapper -->
     
         </div>
         <!-- /#wrapper -->
    
         <script>
            $(document).ready(function () {
      var trigger = $('.hamburger'),
          overlay = $('.overlay'),
         isClosed = false;
    
        trigger.click(function () {
          hamburger_cross();      
        });
    
        function hamburger_cross() {
    
          if (isClosed == true) {          
            overlay.hide();
            trigger.removeClass('is-open');
            trigger.addClass('is-closed');
            isClosed = false;
          } else {   
            overlay.show();
            trigger.removeClass('is-closed');
            trigger.addClass('is-open');
            isClosed = true;
          }
      }
      
      $('[data-toggle="offcanvas"]').click(function () {
            $('#wrapper').toggleClass('toggled');
      });  
    });
         </script>
</body>
</html>