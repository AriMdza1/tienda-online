<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/styles.css">
    <script src="js/bootstrap.min.js" type="text/javascript"></script>
    <script src="js/jquery-3.6.1.min.js"></script>
 <title>Registrarse</title>
</head>
<body>
        <%- include('header') %>
    <div class="wrapper fadeInDown">
        <div class="wrapper fadeInDown">
            <div id="formContent">
                <form action="/signup" method="post">
                    <div>
                        <input type="text" id="login" class="fadeIn second" name="p_nombre" placeholder="Primer nombre">
                        <input type="text" id="login" class="fadeIn second" name="s_nombre" placeholder="Segundo nombre">
                        <input type="text" id="login" class="fadeIn second" name="p_apellido" placeholder="Primer apellido">                                                                        
                        <input type="text" id="login" class="fadeIn second" name="s_apellido" placeholder="Segundo apellido">                                                                                                                                                                        
                        <input type="text" id="login" class="fadeIn second" name="email" placeholder="Correo Electronico">
                        <input type="text" id="login" class="fadeIn second" name="cedula" placeholder="cedula">                                                                                                                                                                        
                        <input type="text" id="login" class="fadeIn second" name="telf" placeholder="telefono">                                                                                                                                                                        
                        <div class="form-group">
                            <select class="form-select" name="municipio" id="municipio">
                                <% direccionData.municipios.forEach(function(c){ %>
                                    <option value="<%= c.id_municipio %>"><%= c.municipio %></option>
                                <% }); %>
                            </select>
                            <select class="form-select" name="parroquia" id="parroquia">
                                <% direccionData.parroquias.forEach(function(p){ %>
                                    <option value="<%= p.parroquia %>"><%= p.parroquia %></option>
                                <% }); %>
                            </select>
                          
                           <!--<select class="form-select" name="estado" id="estado">
                                <% direccionData.estados.forEach(function(e){ %>
                                    <option value="<%= e.estado %>"><%= e.estado %></option>
                                <% }); %>
                            </select>
                            
                            <select class="form-select" name="ciudad" id="ciudad">
                                <% direccionData.ciudades.forEach(function(c){ %>
                                    <option value="<%= c.ciudad %>"><%= c.ciudad %></option>
                                <% }); %>
                            </select>
                            -->
                        </div>
                        <input type="text" id="login" class="fadeIn second" name="direccion_1" placeholder="direccion 1">
                        <input type="text" id="login" class="fadeIn second" name="direccion_2" placeholder="direccion 2 (opcional)">  
                        <input type="text" id="login" class="fadeIn second" name="casa" placeholder="casa">                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                          
                        <input type="password" id="password" class="fadeIn third" name="password" placeholder="Contraseña">
                        <input type="password" id="password" class="fadeIn third" name="repeatedPassword" placeholder="Confirmar Contraseña">
                        <input type="submit" class="fadeIn fourth" value="Registrarse">
                    </div>
                      <div >
                        <% if (errors) { %>
                            <% errors.forEach(function(error){ %>
                                <div class="alert alert-danger">error: <%= error %> </div>  
                            <% }); %>
                        <% } %>
                    <a href="/login" class="underlineHover" type="submit" name="register" value="register">Iniciar Sesion</a>
                </form>
            </div>
        </div>
    </div>
    <%- include('footer') %>
</body>
</html>